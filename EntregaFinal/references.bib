	month = dec,
	year = {2010},
	note = {Publisher: United Nations},
	keywords = {ACADEMIC achievement, ECONOMICS, EFFECT of education on economic development, INCOME inequality, PERU, PERUVIAN economy, 1968-, SOCIAL history},
	pages = {115--136},
}

@article{finnoff,
	title = {Decomposing inequality and poverty in post-war {Rwanda}: {The} roles of gender, education, wealth and location.},
